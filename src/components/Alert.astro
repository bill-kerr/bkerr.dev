---
import IconAlert from "~/components/icons/IconAlert.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<div class="flex">
  <div class="w-[6px] bg-yellow-500"></div>
  <div class="bg-yellow-50 p-3 pb-0">
    <div class="flex items-center font-bold text-lg text-yellow-800">
      <IconAlert class="h-6 w-6 mr-2 text-yellow-700" />{title}
    </div>
    <div class="mt-2">
      <slot />
    </div>
  </div>
</div>
